amends "../../configs/schema/servicebus-schema.pkl"

namespaces {
  new Namespace {
    namePrefix = "order"
    options = new NamespaceOptions {
      sku = new Sku {
        name = "Standard"
      }
    }
    authorizations {
      new AuthorizationRule {
        name = "root"
        listen = true
        manage = true
        send = true
      }
    }
    topics {
      new Topic {
        name = "order-processing"
        authorizations {
          new AuthorizationRule {
            name = "orders"
            listen = true
            send = true
          }
        }
        subscriptions {
          new Subscription {
            name = "high-priority"
            options = new SubscriptionOptions {
              deadLetteringOnMessageExpiration = true
            }
          }
          new Subscription {
            name = "normal-priority"
            options = new SubscriptionOptions {
              deadLetteringOnMessageExpiration = true
            }
          }
        }
      }
    }
    queues {
      new Queue {
        name = "orders"
        options = new QueueOptions {
          deadLetteringOnMessageExpiration = true
        }
        authorizations {
          new AuthorizationRule {
            name = "orders"
            listen = true
            manage = true
            send = true
          }
        }
      }
    }
  }
}
